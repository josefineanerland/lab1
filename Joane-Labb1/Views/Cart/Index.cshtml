@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>


<div class="card-deck" style="padding-left:5px; padding-right:5px;">

    <table cellpadding="2" cellspacing="2" border="0">
        <tr>
            <th>Option</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td><a asp-controller="cart" asp-action="RemoveFromCart" asp-route-id="@item.Product.Id">Remove</a></td>
                <td>@item.Product.ProductName</td>
                <td><img src="~/images/@item.Product.ImageUrl" width="60" /> </td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @ViewBag.total
                <a class="btn btn-outline-success" asp-controller="cart" asp-action="ProceedToCheckout">Proceed to checkout</a>
            </td>
        </tr>
    </table>
    
</div>